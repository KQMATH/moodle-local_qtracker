{{!
    @template local_qtracker/sidebar

    Sidebar template.

    Example context (json):
    {
    }
}}
<div id="qtracker-sidebar" class="collapse">
        <div class="position-relative h-100">
                <div class="qtracker-sidebar-header border-bottom bg-white position-absolute w-100">
                    <div class="d-flex align-items-center justify-content-between">
                        <a class="qtracker-sidebar-title bold" href="#">{{questiontitle}} #{{questionid}}</a>
                        <div>
                            {{#options}}
                                <a href="#" onclick="openSidebarOptions();return false;">
                                    {{>core/pix_icon_fontawesome}}
                                </a>
                            {{/options}}
                            {{#close}}
                                <a href="#" onclick="closeIssuesPane();return false;">
                                    {{>core/pix_icon_fontawesome}}
                                </a>
                            {{/close}}
                        </div>
                    </div>
                </div>
            <div class="qtracker-sidebar-content h-100 py-5 px-3">
                <div class="loading h-100 collapse show">
                    <div class="p-5 d-flex justify-content-center h-100">
                        {{>core/loading}}
                    </div>
                </div>
                <div class="qtracker-items h-100 no-overflow"></div>
            </div>
            <div class="qtracker-sidebar-footer border-top bg-white position-absolute w-100">
                    <div class="d-flex align-items-center justify-content-between">
                        <div></div>
                        {{#close}}
                            <a href="#" onclick="closeIssuesPane();return false;">
                                {{>core/pix_icon_fontawesome}}
                            </a>
                        {{/close}}
                    </div>
                </div>
    </div>
</div>
