        {{#trigger}}
            {{>core/pix_icon_fontawesome}}
        {{/trigger}}
    </a>
    <!-- Lage scrollable list? -->
    <div data-region="dropdown" class="dropdown-menu" aria-labelledby="dropdownMenuClickableInside">

        {{#header}}
        <div class="dropdown-header">{{header}}</div>
        <div class="dropdown-divider"></div>
        {{/header}}
        {{#search}}
        <div class="px-3 py-1">
                <input type="search" id="{{label}}form" class="form-control" placeholder="Search"
                aria-label="Search" />
        </div>
        <div class="dropdown-divider"></div>
        {{/search}}
        {{#items}}
            {{#checkbox}}
            <div class="custom-control custom-checkbox ml-2" style="min-width: 200px;">
                <input type="checkbox" class="custom-control-input dropdown-item" data-name={{name}} data-value={{value}} id="{{uniqid}}-customCheck" {{#active}}checked{{/active}} >
                <label class="custom-control-label" for="{{uniqid}}-customCheck">{{{text}}}</label>
            </div>
            {{/checkbox}}
            {{^checkbox}}
            <div class="dropdown-item" data-name={{name}} data-value={{value}}>{{{text}}}</div>
            {{/checkbox}}
        {{/items}}
    </div>
</div>
