{{!
    @template local_qtracker/issue_description

    Issue description template.

    Example context (json):
    {}
}}
<div class="d-flex flex-row">
    <span><img class="userpicture" width="35px" height="35px" src="{{profileimageurl}}"/></span>
    <div class="ml-3 border w-100">
        <div class="d-flex flex-row p-2 border-bottom">
            <a class="text-muted bold" href="{{userurl}}">{{fullname}}</a>&nbsp;
            <div class="text-muted">
                {{#str}} openedissueon, local_qtracker {{/str}}
                {{#userdate}} {{timecreated}}, {{#str}} strftimedate, core_langconfig {{/str}} {{/userdate}}
            </div>
            <div class="ml-auto"></div>
        </div>
        <div class="p-2">
            {{{description}}}
        </div>
    </div>
</div>
