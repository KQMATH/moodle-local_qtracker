{{!
    @template local_qtracker/issues_pane_item

    Issue pane item template.

    Example context (json):
    {
        "profileimageurl": "https://moodle.org/pix/u/f3.png",
        "fullname": "Andr√© Storhaug",
        "userurl": "https://example.com/user/profile.php?id=3",
        "timecreated": "1587655101",
        "title": "Issue title",
        "description": "Issue description"
    }
}}
<div id="issues-pane-issue" class="sidebar-item border-bottom py-3">
    <div class="d-flex flex-row align-items-center">
            <span><img class="userpicture" width="35" height="35" alt="Profile image" src="{{profileimageurl}}"/></span>
        <div class="px-3">
            <a class="text-muted bold" href="{{userurl}}">{{fullname}}</a>
            <div class="text-muted">
                {{#str}} commentedon, local_qtracker {{/str}}
                {{#userdate}} {{timecreated}}, {{#str}} strftimedate, core_langconfig {{/str}} {{/userdate}}
            </div>
        </div>
        <div class="ml-auto px-3">
            <h5>
                {{>local_qtracker/issue_state_badge}}
            </h5>
        </div>
    </div>
    <a href="{{issueurl}}" class="bold">{{title}}</a>
    <div>{{description}}</div>
</div>
