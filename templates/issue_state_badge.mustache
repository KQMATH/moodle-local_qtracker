{{!
    @template local_qtracker/issue_state_badge

    Issue state badge template.

    Example context (json):
    {
        "new": true
    }
}}
<span>
{{#new}}
   <span class="badge badge-primary">{{#str}} new, local_qtracker {{/str}}</span>
{{/new}}
{{#open}}
   <span class="badge badge-success">{{#str}} open, local_qtracker {{/str}}</span>
{{/open}}
{{#closed}}
   <span class="badge badge-danger">{{#str}} closed, local_qtracker {{/str}}</span>
{{/closed}}
</span>
