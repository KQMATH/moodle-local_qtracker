{{!
    @template local_qtracker/button

    Button template.

    Example context (json):
    {
        "classes": "",
        "type": "submit",
        "primary": true,
        "tooltip": "A button.",
        "label": "Button",
        "disabled": false,
        "id": "SomeId",
        "name": "SomeName"
    }
}}
<div class="{{classes}}">
    <button type="{{#type}}{{type}}{{/type}}{{^type}}submit{{/type}}" class="btn {{#primary}}btn-primary{{/primary}}{{^primary}}btn-default{{/primary}}"
        id="{{id}}"
        name="{{name}}"
        title={{#quote}}{{tooltip}}{{/quote}}
        value="{{value}}"
        {{#disabled}}disabled{{/disabled}}>{{label}}</button>
</div>
