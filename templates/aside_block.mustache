{{!
    @template local_qtracker/aside_block

    aside block template.

    Example context (json):
    {
        "label": "tags",
        "items": [{text:"An action", state: "disabled"}, {text:"another action", state: "active"}, {text:"a third action", state: "active"} ],
    }
}}

    <div class="py-3 d-flex flex-column">
        <div class="d-flex flex-inline justify-content-between">
            <div class="bold">{{label}}</div>
                {{> local_qtracker/dropdown}}
        </div>
        <!-- Tag and/or linked issues list -->
        <div class="{{id}}-list list-group list-group-flush">
            {{#items}}
                <div class="list-item border-0 p-1 {{state}}">{{{text}}}</div>
            {{/items}}
        </div>
    </div>
